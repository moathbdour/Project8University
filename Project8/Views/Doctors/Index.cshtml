@model IEnumerable<Project8.Models.Doctor>

@{
    ViewBag.Title = "Doctors";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .imgthumbnail {
        z-index: 999999;
        cursor: pointer;
        -webkit-transition-property: all;
        -webkit-transition-duration: 0.5s;
    }

        .imgthumbnail:hover {
            transform: scale(5);
        }
</style>

<h2>Doctors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Doctor_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doctor_Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doctor_Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doctor_Email)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Doctor_Name)
        </td>
        <td>
            <img style="height:50px; width:50px" class="imgthumbnail" src="../Images/@Html.DisplayFor(modelItem => item.Doctor_Image)" />

            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Doctor_Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Doctor_Email)
        </td>
        
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Doctor_Id }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.Doctor_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Doctor_Id })
        </td>
    </tr>
}

</table>
