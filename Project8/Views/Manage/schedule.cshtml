@{
    ViewBag.Title = "schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="schedule-container">
    <h2 style="font-style:">Schedule </h2>
    @if (ViewBag.messege == "get")
    {
        <form method="post">
            <select class="form-control" name="semesterid" id="semesterid">
                @foreach (var item in Model.s)
                {
                    <option value="@item.id">@item.name</option>
                }
            </select>

            <select class="form-control" name="majorid" id="majorid">
                @foreach (var item in Model.m)
                {
                    <option value="@item.Major_Id">@item.Major_Name</option>
                }
            </select>
            <button type="submit">Show Courses</button>
        </form>
    }
    else
    {
        <form method="post">
            <select class="form-control" name="semesterid" id="semesterid">
                @foreach (var item in Model.s)
                {
                    if (item.id == ViewBag.semesterid)
                    {
                        <option selected value="@item.id">@item.name</option>
                    }
                    else
                    {
                        <option value="@item.id">@item.name</option>
                    }
                }
            </select>

            <select class="form-control" name="majorid" id="majorid">
                @foreach (var item in Model.m)
                {
                    if (item.Major_Id == ViewBag.majorid)
                    {
                        <option selected value="@item.Major_Id">@item.Major_Name</option>
                    }
                    else
                    {
                        <option value="@item.Major_Id">@item.Major_Name</option>
                    }
                }
            </select>
            <button type="submit" class="btn btn-primary btn-sm">Show Courses</button>
        </form>
        <br />

        <div class="table-stats order-table ov-h">
            <table class="table ">
                <thead>
                    <tr>
                        <th class="avatar">Course ID</th>
                        <th class="avatar">Course Name</th>
                        <th>Nomber Of Hours</th>
                        <th>Course Days</th>
                        <th>Time</th>
                        <th>Hall</th>
                        <th>Capacity</th>
                        <th>Registered</th>
                        <th>Doctor</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.a)
                    {
                        <tr>
                            <td>@item.offered_id</td>
                            <td>@item.Cours.Course_Name</td>
                            <td><span class="name">@item.Cours.Number_Of_Hours</span></td>
                            <td><span class="name">@item.Day.Days</span></td>
                            <td><span class="product">@item.start_time -- @item.end_time</span></td>
                            <td>@item.Hall</td>
                            <td>@item.Capacity</td>
                            <td><span class="name">@item.Registered</span></td>
                            <td><span class="product">@item.Doctor.Doctor_Name</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
<style>
    select {
        font-weight: bold;
    }

    .schedule-container h2 {
        font-weight: bold;
    }

    .schedule-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 50px;
    }

        .schedule-container form {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            align-items: center;
            margin-bottom: 30px;
        }

            .schedule-container form select {
                margin: 0 20px;
                width: 200px;
                height: 40px;
                font-size: 16px;
                border: 1px solid #ccc;
                border-radius: 5px;
                padding: 5px 10px;
            }

            .schedule-container form button {
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 5px;
                padding: 10px 20px;
                font-size: 16px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .schedule-container form button:hover {
                    background-color: #0069d9;
                }

        .schedule-container table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        .schedule-container th,
        .schedule-container td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ccc;
        }

            .schedule-container th.avatar {
                width: 25%;
            }

            .schedule-container th:nth-child(2) {
                width: 10%;
            }

            .schedule-container th:nth-child(3) {
                width: 10%;
            }

            .schedule-container th:nth-child(4) {
                width: 20%;
            }

            .schedule-container th:nth-child(5) {
                width: 10%;
            }

            .schedule-container th:nth-child(6) {
                width: 10%;
            }

            .schedule-container th:nth-child(7) {
                width: 10%;
            }

            .schedule-container th:nth-child(8) {
                width: 15%;
            }

            .schedule-container td.address {
                font-weight: bold;
            }



        .schedule-container th {
            font-weight: bold;
            color: black;
        }

        .schedule-container table {
            border: 2px solid black;
            border-collapse: collapse;
        }

        .schedule-container th,
        .schedule-container td {
            font-weight: bold;
            border: 2px solid black;
        }
</style>